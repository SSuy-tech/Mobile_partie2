                                    android:text="15h" />

                                <TextView
                                    android:id="@+id/heure1530"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="600dp"
                                    android:gravity="center"
                                    android:text="15h30" />

                                <TextView
                                    android:id="@+id/heure16"
                                    android:layout_width="match_parent"
